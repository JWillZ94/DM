<% include partials/header %>
<div class="blog-content">
  <p class="section-title">Blog</p>
  <div id="posts">
    <% for (let i = 0; i < posts.length; i++) { %>
      <div class="post" id="<%= posts[i]._id %>">
        <p><a id="<%= posts[i]._id %>" href="/blog/<%= posts[i]._id %>"><%= posts[i].title %></a></p>
        <p class="content-cutoff"><a href="/blog/<%= posts[i]._id %>"><%= posts[i].content %></a></p>
        <p><%= posts[i].post_date %></p>
      </div>
    <% } %>
  </div>
</div>
<% include partials/footer %>
