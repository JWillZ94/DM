<% include partials/header %>
<div class="edit-content">
  <p>Update Blog Post</p>
  <form enctype="multipart/form-data" class="update-form" id="<%= post._id %>">
    <div>
      <label for="title">Title: </label>
      <input type="text" value="<%= post.title %>" name="title">
    </div>
    <div>
      <label for="content">Content: </label>
      <textarea name="content" id="" cols="100" rows="20"><%= post.content %></textarea>
    </div>
    <div>
      <label for="last_updated">Last Date Updated: </label>
      <input type="date" value="<%= post.last_update %>" name="last_updated">
    </div>
    <input type="submit">
  </form>
</div>
<% include partials/footer %>
